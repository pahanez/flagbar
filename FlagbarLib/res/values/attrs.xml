<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="flagbar">
        <attr name="stripesCount" format="integer">
            <enum name="one" value="1" />
            <enum name="two" value="2" />
            <enum name="three" value="3" />
            <enum name="four" value="4" />
        </attr>

        <attr name="firstLineColor" format="color" />
        <attr name="secondLineColor" format="color" />
        <attr name="thirdLineColor" format="color" />
        <attr name="fourthLineColor" format="color" />

        <attr name="firstLineSpeed" format="enum">
            <enum name="high" value="12" />
            <enum name="medium" value="9" />
            <enum name="low" value="4" />
        </attr>
        <attr name="secondLineSpeed" format="enum">
            <enum name="high" value="12" />
            <enum name="medium" value="9" />
            <enum name="low" value="4" />
        </attr>
        <attr name="thirdLineSpeed" format="enum">
            <enum name="high" value="12" />
            <enum name="medium" value="9" />
            <enum name="low" value="4" />
        </attr>
        <attr name="fourthLineSpeed" format="enum">
            <enum name="high" value="12" />
            <enum name="medium" value="9" />
            <enum name="low" value="4" />
        </attr>

        <attr name="firstLineDirection" format="integer">
            <enum name="clockwise" value="0"/>
            <enum name="counterclockwise" value="1"/>
        </attr>

        <attr name="secondLineDirection" format="integer">
            <enum name="clockwise" value="0"/>
            <enum name="counterclockwise" value="1"/>
        </attr>
        <attr name="thirdLineDirection" format="integer">
            <enum name="clockwise" value="0"/>
            <enum name="counterclockwise" value="1"/>
        </attr>
        <attr name="fourthLineDirection" format="integer">
            <enum name="clockwise" value="0"/>
            <enum name="counterclockwise" value="1"/>
        </attr>

        <attr name="indeterminate" format="boolean"/>
        <attr name="progressStart" format="enum">
            <enum name="top" value="-90"/>
            <enum name="right" value="0"/>
            <enum name="bottom" value="90"/>
            <enum name="left" value="180"/>
        </attr>

        <attr name="lineWidth" format="dimension"/>
        <attr name="progress" format="integer"/>
        <attr name="fps" format="enum">
            <enum name="fps30" value="33"/>
            <enum name="fps60" value="16"/>
        </attr>


    </declare-styleable>
</resources>
